	begin	1000
	start	1024
ARR1	dw	[4]
VAR1	dw	23
VAR2	dw	19

	# following is how you load a long address
	# into a particular register 
	addi	$t0, $zero, VAR2
	lui	$t0, VAR2
	
	addi	$t0, $zero, 128
	addi	$t1, $zero, -128
	addi	$t2, $zero, 3
	
	sll	$s0, $t0, 3		#1024
	sllv	$s0, $t0, $t2		#1024
	sll	$s1, $t1, 3		#-1024
	sllv	$s1, $t1, $t2		#-1024
	
	sra	$s0, $t0, 3		#16
	srav	$s0, $t0, $t2		#16
	sra	$s1, $t1, 3		#-16
	srav	$s1, $t1, $t2		#-16
	
	srl	$s0, $t0, 3		#16
	srlv	$s0, $t0, $t2		#16
	srl	$s1, $t1, 3		#536870896
	srlv	$s1, $t1, $t2		#536870896
	
	end
